<?php

// handles input
function greeting_menu() {
  $items = array();
  $items['hello_friend'] = array(
    'title' => "Hello, Friend!",
    'page callback' => 'say_hello',
    'access callback' => TRUE,
    'type' => MENU_NORMAL_ITEM
  );
  return $items;
}


// handles output
function say_hello() {
  return '<p>Hello my dear friend</p>';
}
